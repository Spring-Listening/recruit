/**index.wxss**/

.page {
  background: #f2f5f7;
  position: relative;
}

/* page_hd======================================================================================================== */

.page .page_hd .page_hd_box {
  background: #f00d3b;
  width: 100%;
  height: 79px;
  position: relative;
}

.page .page_hd .page_hd_box image {
  width: 100%;
  height: 79px;
}

.page .page_hd .page_hd_box .page_bd_content {
  height: 116rpx;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  box-sizing: border-box;
  padding: 24rpx;
  display: flex;
}

.page .page_hd .page_hd_box .page_bd_content .header_img {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #000;
}

.page .page_hd .page_hd_box .page_bd_content .header_title {
  flex: 1;
  padding-left: 16rpx;
}

.page .page_hd .page_hd_box .page_bd_content .header_title .user_name {
  font-size: 28rpx;
  color: #fff;
  line-height: 40rpx;
}

.page .page_hd .page_hd_box .page_bd_content .header_title .user_desc {
  font-size: 24rpx;
  line-height: 36rpx;
  opacity: 0.8;
  color: #fff;
}

.scrolly {
  position: relative;
}

/* page_bd============================================================================================ */

.page_bd .swiper {
  /* height: 138px; */
  position: sticky;
  position: -webkit-sticky;
  top: 0;
}

.page_bd .swiper_H {
  width: 100%;
  display: flex;
  /* height: 138px; */
  box-sizing: border-box;
  padding: 12px 0px;
  background: #fff;
}

.page_bd .swiper_H .slider {
  width: 500px;
  overflow: hidden;
  padding: 0 6px;
  background: #fff;
}

.page_bd .swiper_H .scroll-view-item .icon {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 0;
  right: 0;
}

.page_bd .swiper_H .scroll-view-item {
  position: relative;
  float: left;
  width: 88px;
  /* height: 114px; */
  margin: 0 6px;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  border-radius: 5px;
  background: #fff;
}

.page_bd .swiper_H .scroll-view-item .gift_img {
  width: 100%;
  height: 86px;
  /* transition: height 0.3s; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.page_bd .swiper_H .scroll-view-item .stickeyNone{
  height: 0;
  transition: height 0.3s;
}
/* .page_bd .swiper_H .scroll-view-item .stickeyShow{
  height: 86px;
  transition: height 0.2s;
} */
.page_bd .swiper_H .scroll-view-item.active {
  border: 1px solid #d02c52;
}

.page_bd .swiper_H .scroll-view-item.active .gift_name {
  color: #d02c52;
  font-weight: 600;
}

.page_bd .swiper_H .scroll-view-item .gift_img image {
  width: 80px;
  height: 80px;
}

.page_bd .swiper_H .scroll-view-item .gift_name {
  height: 26px;
  line-height: 26px;
  padding: 0 7px;
  font-size: 12px;
  color: #9a9a9a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.page_bd .detail_banner {
  padding-top: 4px;
  padding-bottom: 16px;
  background: #fff;
}

.page_bd .detail_banner .banner_img image {
  width: 420rpx;
  height: 420rpx;
}

.page_bd .detail_banner .banner_img {
  width: 420rpx;
  height: 420rpx;
}

.page_bd .detail_banner .price text:nth-child(1) {
  font-size: 24rpx;
  padding-right: 2px;
}

.page_bd .detail_banner .price {
  padding-top: 12px;
  color: #d02c52;
  font-size: 36rpx;
  text-align: center;
  line-height: 25px;
}

.page_bd .detail_banner .detail_title {
  padding-top: 4px;
  font-size: 18px;
  color: #212121;
  line-height: 25px;
  text-align: center;
}

.page_bd .detail_banner .detail_desc_title {
  font-size: 12px;
  color: #212121;
  text-align: center;
  line-height: 18px;
  padding-top: 4px;
}

.page_bd .detail_banner .detail_kucun {
  font-size: 12px;
  padding-top: 4px;
  color: #9a9a9a;
  line-height: 18px;
  text-align: center;
}

.page_bd .product_detail_img {
  padding-top: 6px;
}

.page_bd .product_detail_img .img-item {
  width: 100%;
}

.page_bd .product_detail_img .img-item image {
  display: block;
  width: 100%;
}

.page_bd .stickey {
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.08);
}

/* ============================================================================================= */

.button {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 0 0.38rem;
  z-index: 2;
  box-sizing: border-box;
}

.button-box {
  padding: 8px 11px 0;
  width: 100%;
  height: 78px;
  position: relative;
  z-index: 4;
  box-sizing: border-box;
}

.btn {
  height: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 26px;
  background: #d02c52;
  color: #fff;
  font-size: 16px;
  box-shadow: 0 8px 16px 0 rgba(208, 44, 82, 0.3);
}

.btn .minTitle {
  font-size: 10px;
  line-height: 12px;
  width: 80%;
  margin-top: 2px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
